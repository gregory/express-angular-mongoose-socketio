.filter-bar
  position: relative
  z-index: 1
  .navbar
    margin-bottom: 0

.listing
  padding: 0
  margin: 0
  .property_img
    position: absolute
    top: 0
    width: 100px
  .property_details
    margin-left: 100px
    padding-left: 1em
  .property
    min-height: 100px
    position: relative
    border: 1px solid #eee
  .property_name
    font-weight: bold
    font-size: 1.2em
  .property_price
    display: inline
  .property_beds
    display: inline
    padding-right: .5em
  .property_location
    font-size: 1em
    a
      color: #ccc
